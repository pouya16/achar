<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main.Tools.passwordHelper.PasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/samimfd"
                android:text="تنظیمات رمز را انتخاب کنید:"
                android:textColor="@color/colorPrimary"
                android:textDirection="rtl"
                android:textSize="24sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layoutDirection="rtl"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:textDirection="rtl"
            android:layout_marginLeft="50dp">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/lengthCheckBoxPasswordAct"
                android:layout_height="wrap_content"
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                android:text="طول رشته:"
                android:textSize="18sp"
                android:fontFamily="@font/samimfd"
                android:checked="true"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/lengthPlusImageBtnPasswordAct"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_up"/>
            <EditText
                android:layout_width="40dp"
                android:text="10"
                android:digits="0123456789"
                android:inputType="number"
                android:id="@+id/lengthEditTxtPasswordAct"
                android:fontFamily="@font/samimfd"
                android:textAlignment="center"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/lengthNegImageBtnPasswordAct"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_down"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layoutDirection="rtl"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:textDirection="rtl"
            android:layout_marginLeft="50dp">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/numbersCheckBoxPasswordAct"
                android:layout_height="wrap_content"
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                android:text="تعداد عدد در رشته:"
                android:textSize="18sp"
                android:fontFamily="@font/samimfd"
                android:checked="true"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/numberPlusImageBtnPasswordAct"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_up"/>
            <EditText
                android:layout_width="40dp"
                android:text="2"
                android:digits="0123456789"
                android:id="@+id/numberEditTxtPasswordAct"
                android:inputType="number"
                android:fontFamily="@font/samimfd"
                android:textAlignment="center"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/numberNegImageBtnPasswordAct"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_down"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layoutDirection="rtl"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:textDirection="rtl"
            android:layout_marginLeft="50dp">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/specialCheckBoxPasswordAct"
                android:layout_height="wrap_content"
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                android:text="طول رشته:"
                android:textSize="18sp"
                android:fontFamily="@font/samimfd"
                android:checked="true"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/specialPlusImageBtnPasswordAct"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_up"/>
            <EditText
                android:layout_width="40dp"
                android:id="@+id/specialEditTxtPasswordAct"
                android:text="2"
                android:digits="0123456789"
                android:inputType="number"
                android:fontFamily="@font/samimfd"
                android:textAlignment="center"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/specialNegImageBtnPasswordAct"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_down"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center_vertical|center"
            android:gravity="center|center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/generatePasswordBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/samimfd"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="پسورد بساز" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/passwordText"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:autoSizeTextType="uniform"
                android:foregroundGravity="center_vertical|center"
                android:gravity="center|center_vertical"
                android:maxLines="1"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/generatePasswordBtn" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="آدرس سایت"
            android:layoutDirection="rtl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textDirection="rtl"
            app:boxStrokeColor="@color/colorPrimary"
            app:endIconMode="clear_text"
            app:helperTextEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/siteAdressTxtPasswordAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/samim"
                android:hint="مثال: www.pouyair.ir"
                android:inputType="text"
                android:textDirection="ltr"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/savePasswordBtnPasswordAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/samimfd"
            android:text="ذخیره رمز عبور"
            android:textSize="18sp" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/passwordConatainerPasswordAc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorAccent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/samimfd"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="url: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/urlSavedPassAct"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/samim"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textSize="12sp"
                        app:autoSizeTextType="none" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/samimfd"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="password: "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/passwordSavedPassAct"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/samim"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textSize="12sp"
                        app:autoSizeTextType="none" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <at.markushi.ui.CircleButton
                android:id="@+id/btnDeletePasswordAct"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:foregroundGravity="center"
                android:src="@android:drawable/ic_menu_delete"
                app:cb_color="#D81B60" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSavedPassPasswordsAct"
        android:backgroundTint="#fb8c00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/samim"
        android:layout_margin="12dp"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:text="مشاهده رمزهای ذخیره شده"/>
</RelativeLayout>